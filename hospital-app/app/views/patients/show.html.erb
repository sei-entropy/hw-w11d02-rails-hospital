 <h2>Patient# <%= @patient.id%></h2> 
 <h4>Assign to a doctor</h4>
  <table>
    <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Diagnosis</th>
        <th>Date of birth</th>
    </tr>

    <tr>
        <td><%= @patient.first_name%></td>
        <td><%= @patient.last_name%></td>
        <td><%= @patient.diagnosis%></td>
        <td><%= @patient.born_on%></td>
    </tr>
</table><br><br>


<% unless @patient.doctor_id.nil? %>
    <p><strong>Assigned to doctor:</strong> <%= link_to  @patient.doctor_id, doctor_path(@patient.doctor_id)%></p>
<% else %>
    <%= form_for @patient do |f| %>
    <div>
        <%= f.label :doctor_id, 'Assign to doctor'%>
        <%= f.text_field :doctor_id%>
    </div>

    <%= f.submit %>
    <%end%>

<%end%>