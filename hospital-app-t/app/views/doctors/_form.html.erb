<div class="section">
<%= simple_form_for @doctor do |f| %>
  <div class="field">
    <div class="control">
      <%= f.input :first_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <%= f.input :lst_name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
    <div class="field">
    <div class="control">
      <%= f.input :zip_code, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>


  <%= f.button :submit, 'Add new Doctor', class: "button is-primary" %>
<% end %>
</div>