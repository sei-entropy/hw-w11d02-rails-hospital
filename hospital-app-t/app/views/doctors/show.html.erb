<% content_for :page_title, "#{@doctor.first_name}  #{@doctor.lst_name}" %>
<%= link_to "Add New Patient", new_patient_path(:doctors_id => @doctor.id), class:"navbar-item" %>


<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_doctor_path(@doctor), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", doctor_path(@doctor), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @doctor.zip_code %>
		</div>
				<div class="content">
			<%= @doctor.specialty %>
		</div>

	</div>
</section>

<section class="section comments">
	<div class="container">
		<div class="comment-form">
			<hr />
		</div>
	</div>
</section>