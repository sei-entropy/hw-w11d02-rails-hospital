<% content_for :page_title, "#{@patient.first_name}  #{@patient.last_name}" %>

<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_patient_path(@patient), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", patient_path(@patient), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @patient.diagnosis %>
		</div>
				<div class="content">
			<%= @patient.born_on %>
		</div>

	</div>
</section>

<section class="section comments">
	<div class="container">
		<div class="comment-form">
			<hr />
		</div>
	</div>
</section>